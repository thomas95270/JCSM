{% extends 'base.html.twig' %}

{% block title %}{{parent()}} | {{categorie.nom}}{% endblock %}

{% block body %}
    <h1>Catégorie : {{categorie.nom}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info text-light" href="{{ path('app_categorie_index') }}">Retour à la liste</a>

    <a class="btn btn-info text-light" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Modifier</a>

    {{ include('back/categorie/_delete_form.html.twig') }}
{% endblock %}

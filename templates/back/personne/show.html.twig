{% extends 'base.html.twig' %}

{% block title %}{{parent()}} | {{personne.nom ~ " " ~ personne.prenom}}{% endblock %}

{% block body %}
    <h1>Personne</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ personne.id }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ personne.codePostal }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ personne.adresse }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ personne.ville }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ personne.dateNaissance ? personne.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ personne.tel }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-danger text-light" href="{{ path('app_personne_index') }}">Retour</a>

    <a class="btn btn-success text-light" href="{{ path('app_personne_edit', {'id': personne.id}) }}">edit</a>

    {{ include('back/personne/_delete_form.html.twig') }}
{% endblock %}

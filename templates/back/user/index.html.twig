{% extends 'base.html.twig' %}

{% block title %}{{parent()}} | Les utilisateurs{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Photo</th>
                <th>DateCreation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.photo }}</td>
                <td>{{ user.dateCreation ? user.dateCreation|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-info text-light" href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a class="btn btn-info text-light" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success text-light" href="{{ path('app_user_new') }}">Enregistrez un nouvel utilisateur</a>
    <a class="btn btn-danger text-light" href="{{ path('accueil') }}">Retour Ã  l'Accueil</a>
{% endblock %}
